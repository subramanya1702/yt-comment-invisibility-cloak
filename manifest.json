{
    "manifest_version": 3,
    "name": "YT Comment Invisibility Cloak",
    "description": "An extension that hides comment sections and secondary sections on YouTube.",
    "version": "1.0",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_title": "YT Comment Invisibility Cloak",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "webNavigation"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ]
}