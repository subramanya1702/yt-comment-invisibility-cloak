{
    "manifest_version": 3,
    "name": "YT Comment Invisibility Cloak",
    "description": "An extension that hides comment sections on youtube",
    "version": "1.0",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_title": "YT Comment Invisibility Cloak"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ]
}